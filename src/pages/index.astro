---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';

// Sample featured records (will be replaced with content collection)
const featured = [
  {
    slug: 'miles-davis-kind-of-blue',
    title: 'Kind of Blue',
    artist: 'Miles Davis',
    price: 35,
    image: '/records/kind-of-blue.svg',
    condition: 'VG+'
  },
  {
    slug: 'fleetwood-mac-rumours',
    title: 'Rumours',
    artist: 'Fleetwood Mac',
    price: 28,
    image: '/records/rumours.svg',
    condition: 'VG+'
  },
  {
    slug: 'talking-heads-remain-in-light',
    title: 'Remain in Light',
    artist: 'Talking Heads',
    price: 32,
    image: '/records/remain-in-light.svg',
    condition: 'NM'
  },
  {
    slug: 'stevie-wonder-innervisions',
    title: 'Innervisions',
    artist: 'Stevie Wonder',
    price: 25,
    image: '/records/innervisions.svg',
    condition: 'VG'
  }
];
---

<Layout>
  <section class="hero">
    <div class="container">
      <h1>Records worth<br />listening to.</h1>
      <p class="hero-sub">Hand-picked vinyl from someone who cares.</p>
      <a href="/shop" class="btn mt-lg">Browse Collection</a>
    </div>
  </section>

  <section class="featured">
    <div class="container">
      <div class="section-header">
        <h2>New Arrivals</h2>
        <a href="/shop" class="text-sm">View All</a>
      </div>

      <div class="grid grid-4 mt-lg">
        {featured.map((record) => (
          <ProductCard {...record} />
        ))}
      </div>
    </div>
  </section>

  <section class="about-preview">
    <div class="container">
      <div class="about-content">
        <p class="text-xs text-gray mb-sm">The Edit</p>
        <h2>Every record here passed the test.</h2>
        <p class="mt-md text-gray">
          I dig through crates so you don't have to. No filler, no hypeâ€”just
          albums that hold up on the hundredth spin. Each one inspected,
          cleaned, and graded honestly.
        </p>
        <a href="/about" class="btn btn-outline mt-lg">Our Standards</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    padding: var(--space-2xl) 0;
    text-align: center;
  }

  .hero h1 {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-sub {
    margin-top: var(--space-md);
    font-size: 1.125rem;
    color: var(--color-gray);
  }

  .featured {
    padding: var(--space-xl) 0 var(--space-2xl);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    border-bottom: 1px solid var(--color-gray-light);
    padding-bottom: var(--space-sm);
  }

  .section-header a {
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .about-preview {
    padding: var(--space-2xl) 0;
    background: var(--color-gray-light);
  }

  .about-content {
    max-width: 540px;
  }
</style>
